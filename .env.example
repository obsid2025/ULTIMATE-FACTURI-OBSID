# Credentiale pentru autentificare
# Copiaza acest fisier ca .env si modifica valorile

# Admin credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password_here
ADMIN_NAME=Administrator

# Optional: additional users (format: user1,pass1,name1;user2,pass2,name2)
ADDITIONAL_USERS=

# Secret key pentru cookies (genereaza unul random)
COOKIE_KEY=your_random_secret_key_here

# Cookie expiry days
COOKIE_EXPIRY_DAYS=30

# Netopia API
NETOPIA_API_KEY=your_netopia_api_key_here

# IMAP Email (pentru citire email-uri Netopia)
IMAP_SERVER=mail.obsid.ro
IMAP_PORT=993
IMAP_USER=documente@obsid.ro
IMAP_PASSWORD=your_imap_password_here

# GLS Romania API (MyGLS)
GLS_CLIENT_NUMBER=your_gls_client_number
GLS_USERNAME=your_gls_username
GLS_PASSWORD=your_gls_password
